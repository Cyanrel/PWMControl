<Window x:Class="PwmControl.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Display Settings" 
        Height="190" Width="320"
        WindowStartupLocation="CenterScreen"
        Topmost="True" 
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent">

    <Border Background="White" 
            BorderBrush="#D0D0D0" 
            BorderThickness="1" 
            CornerRadius="8">

        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.2" Direction="270" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="64"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="30,10,30,0">
                <TextBlock Text="是否保留这些显示器设置?" 
                           FontFamily="Microsoft YaHei"
                           FontSize="19" 
                           FontWeight="Bold" 
                           Foreground="#1A1A1A"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="TxtMessage" 
                           Text="在 11 秒内还原为以前的显示器设置。" 
                           FontFamily="Microsoft YaHei"
                           FontSize="14" 
                           Foreground="#555555"/>
            </StackPanel>

            <Border Grid.Row="1" 
                    Background="#F3F3F3" 
                    CornerRadius="0,0,7,7" 
                    BorderBrush="#E5E5E5" 
                    BorderThickness="0,1,0,0">

                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnKeep"
                            Grid.Column="0"
                            Click="BtnKeep_Click"
                            Height="32"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        CornerRadius="4" 
                                        Background="White" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1">
                                    <TextBlock Text="保留更改" 
                                               FontFamily="Microsoft YaHei"
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Black"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F7F7F7"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#999999"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E5E5E5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnRevert"
                            Grid.Column="2"
                            Click="BtnRevert_Click"
                            Height="32"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        CornerRadius="4" 
                                        Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
                                    <TextBlock Text="恢复" 
                                               FontFamily="Microsoft YaHei"
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center" 
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>