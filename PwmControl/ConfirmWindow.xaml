<Window x:Class="PwmControl.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="安全确认" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        Topmost="True" 
        ResizeMode="NoResize"
        WindowStyle="None"
        BorderBrush="#D32F2F" BorderThickness="2"
        Background="White">
    <StackPanel VerticalAlignment="Center" Margin="20">
        <TextBlock Text="⚠️ 正在测试新频率..." FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333"/>

        <TextBlock x:Name="TxtMessage" Text="如果屏幕正常显示，请在 15 秒内点击确认" 
                   FontSize="14" Margin="0,10,0,20" HorizontalAlignment="Center" Foreground="#555"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="还原 (Esc)" Click="BtnRevert_Click" 
                    Background="#EEE" Foreground="Black" Margin="5" Height="35"/>

            <Button Content="确认保留" Click="BtnKeep_Click" 
                    Background="#D32F2F" Foreground="White" Margin="5" Height="35" Grid.Column="1"/>
        </Grid>

        <TextBlock x:Name="TxtTimer" Text="15" FontSize="12" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#999"/>
    </StackPanel>
</Window>