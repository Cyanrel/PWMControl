<Window x:Class="PwmControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PWM Tuner" Width="520"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F3F3F3"
        Icon="Images/logo.ico">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0067C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24,24,24,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="PWM调节" FontSize="22" FontWeight="SemiBold" Foreground="#202020"/>
            <TextBlock Text="PWM Controller" FontSize="14" Foreground="#666" Margin="0,4,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Margin="0,20,0,25" Padding="25">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.08" BlurRadius="20"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="当前实时频率" Foreground="#888" FontSize="13"/>

                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,10">
                    <TextBlock x:Name="TxtCurrentFreq" Text="---" FontSize="42" FontWeight="Bold" Foreground="#0067C0" VerticalAlignment="Bottom"/>
                    <TextBlock Text=" Hz" FontSize="18" FontWeight="SemiBold" Foreground="#999" Margin="6,0,0,8" VerticalAlignment="Bottom"/>
                </StackPanel>

                <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Content="刷新" Click="BtnRefresh_Click" 
                        Height="32" Width="70" Background="#F0F0F0" Foreground="#333" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="2" Grid.ColumnSpan="2" x:Name="TxtStatus" 
                           Text="正在检测显示器状态..." 
                           TextWrapping="Wrap"
                           Margin="0,5,0,0" Foreground="#AAA" FontSize="13"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputFreq" Height="40" VerticalContentAlignment="Center" 
                         Padding="10,0" Text="1250" FontSize="16" BorderBrush="#E0E0E0" Background="White">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Button Grid.Column="2" x:Name="BtnApply" Content="应用频率" Click="BtnApply_Click" 
                        FontSize="14" FontWeight="Medium"/>
            </Grid>

            <Button Content="对人眼的低风险区域是大于 1250Hz 时" Click="BtnSmart_Click" 
                    Margin="0,12,0,0" Height="36" Background="#107C41" FontSize="13"/>

            <CheckBox x:Name="ChkAutoStart" Content="开机自动静默启动 (需管理员权限)" 
                      Margin="2,15,0,0" Foreground="#666" FontSize="13"
                      Checked="ChkAutoStart_Checked" Unchecked="ChkAutoStart_Unchecked"/>
        </StackPanel>
    </Grid>
</Window>